{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/app/**/*",
    "src/setup/**/*",
    "src/preload/**/*",
    "src/shared/**/*"
  ]
}
