{
  "name": "clientapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --config tsconfig.prod.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 800",
    "lint:fix": "eslint --fix . --ext ts,tsx --report-unused-disable-directives --max-warnings 800",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "preview": "vite preview"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "@types/node": "^20.4.9",
    "@types/reach__router": "^1.3.11",
    "@types/react-dom": "^18.2.7",
    "@types/storybook__react": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "core-js": "^3.32.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "leaflet": "^1.9.4",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "devDependencies": {
    "@storybook/react": "^7.2.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/leaflet": "^1.9.3",
    "@types/react": "^18.2.20",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-plugin-jest-react": "^0.1.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-testing-library": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "plugin:jest-react/recommended"
    ],
    "ignorePatterns": [
      "dist",
      ".eslintrc.cjs",
      "jest.setup.ts",
      "jest.config.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react-refresh",
      "testing-library",
      "prettier",
      "jest-react",
      "react-hooks"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/ban-types": "warn",
      "no-case-declarations": "warn",
      "react/display-name": "warn",
      "react/prop-types": "warn",
      "@typescript-eslint/no-loss-of-precision": "warn",
      "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./tsconfig.json",
        "./tsconfig.node.json"
      ]
    }
  }
}
