{
	"name": "clientapp",
	"version": "0.1.0",
	"proxy": "http://localhost:5000",
	"homepage": "/starsky/",
	"private": true,
	"dependencies": {
		"@reach/router": "^1.3.4",
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@testing-library/user-event": "^12.2.2",
		"@types/enzyme": "^3.10.8",
		"@types/jest": "^26.0.15",
		"@types/leaflet": "^1.5.19",
		"@types/node": "^12.19.7",
		"@types/reach__router": "^1.3.6",
		"@types/react": "^16.14.2",
		"@types/react-dom": "^16.9.10",
		"@types/storybook__react": "^5.2.1",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.3.2",
		"abortcontroller-polyfill": "^1.5.0",
		"enzyme": "^3.11.0",
		"intersection-observer": "^0.11.0",
		"leaflet": "^1.7.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-scripts": "4.0.1",
		"typescript": "^4.1.2",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"lint": "node node_modules/eslint/bin/eslint.js \"src/**\" --max-warnings 0",
		"test:ci": "npm run lint && react-scripts test --watchAll=false --coverage --reporters=default 2>&1",
		"storybook": "start-storybook",
		"upgrade": "echo 'check readme.md 20201130  v4.0.1 (2020-11-23)'"
	},
	"jest": {
		"collectCoverageFrom": [
			"**/*.{ts,tsx}",
			"!coverage/**",
			"!**/*.stories.{ts,tsx}",
			"!node_modules/**",
			"!src/index.*ts*",
			"!src/service-worker.ts",
			"!src/react-app-env.d.ts",
			"!src/setupTests.js",
			"!public/**",
			"!build/**"
		],
		"coverageReporters": [
			"text",
			"lcov",
			"json",
			"cobertura"
		],
		"coverageThreshold": {
			"global": {
				"branches": 65,
				"functions": 70,
				"lines": 80,
				"statements": 75
			}
		}
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"plugin:prettier/recommended"
		],
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": "error"
		}
	},
	"prettier": {
		"trailingComma": "none",
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": false,
		"tabWidth": 2,
		"useTabs": true
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@storybook/react": "^6.1.9",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"prettier": "^2.2.1"
	}
}
