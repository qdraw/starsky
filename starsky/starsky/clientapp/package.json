{
  "name": "clientapp",
  "version": "0.5.0-beta.4",
  "proxy": "http://localhost:5000",
  "homepage": "/starsky/",
  "dependencies": {
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/leaflet": "^1.7.9",
    "@types/node": "^17.0.23",
    "@types/reach__router": "^1.3.10",
    "@types/react": "^17.0.42",
    "@types/react-dom": "^17.0.14",
    "@types/storybook__react": "^5.2.1",
    "abortcontroller-polyfill": "^1.7.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "intersection-observer": "^0.12.0",
    "leaflet": "^1.7.1",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "z_postbuild": "npm run lint",
    "lint": "node node_modules/eslint/bin/eslint.js \"src/**\" --max-warnings 1055",
    "lint:fix": "node node_modules/eslint/bin/eslint.js --fix \"src/**\"",
	"fix": "npm run lint:fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "test:ci": "npm run lint && react-scripts test --watchAll=false --coverage --reporters=default 2>&1",
    "storybook": "start-storybook",
    "upgrade": "echo 'check readme.md 20211219  v5.0.0'"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!coverage/**",
      "!**/*.stories.{ts,tsx}",
      "!node_modules/**",
      "!src/index.*ts*",
      "!src/service-worker.ts",
      "!src/react-app-env.d.ts",
      "!src/setupTests.js",
      "!public/**",
      "!build/**"
    ],
    "coverageReporters": [
      "text",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "json",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "testing-library/render-result-naming-convention": "off",
      "testing-library/no-container": "warn",
      "testing-library/prefer-screen-queries": "warn",
      "testing-library/prefer-presence-queries": "warn",
      "testing-library/no-unnecessary-act": "warn",
      "testing-library/no-node-access": "warn",
      "testing-library/no-render-in-setup": "warn",
      "testing-library/no-wait-for-multiple-assertions": "warn"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/react": "^6.4.9"
  }
}
