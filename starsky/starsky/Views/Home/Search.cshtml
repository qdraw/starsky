@using starsky.ViewModels
@model SearchViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h2>
    @foreach (var item in Model.Breadcrumb)
    {
        var name = @item.Split("/")[item.Split("/").Length - 1];
        if (name == "")
        {
            name = "Home";
        }
        if (name != "Home")
        {
            <a asp-controller="Home" asp-action="Search" asp-route-t="@item">@name</a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index">@name</a>
        }
        if (item != Model.Breadcrumb[Model.Breadcrumb.Count - 1])
        {
            <span> &raquo;</span>
        }
    }
</h2>

<h4>
    @if (Model.PageNumber >= 1)
    {
        var prevpage = @Model.PageNumber - 1;
        <a asp-controller="Home" asp-action="Search" asp-route-t="@Model.SearchQuery" asp-route-p="@prevpage">Prev</a>
    }

    @if (Model.PageNumber < Model.LastPageNumber)
    {
        var nextpage = @Model.PageNumber + 1;
        <a asp-controller="Home" asp-action="Search" asp-route-t="@Model.SearchQuery" asp-route-p="@nextpage">Next</a>
    }
</h4>

<div class="wrapper">
    <form asp-controller="Home" asp-action="Search" method="post">
        <input name="t"  value="@Model.SearchQuery"/><button type="submit">Zoek</button>
    </form>
</div>


<div class="wrapper">

    @foreach (var item in Model.FileIndexItems)
    {
        <a class="halfitem" asp-controller="Home" asp-action="Index" asp-route-f="@item.FilePath">
            <div class="caption">
                <h3>@item.FileName</h3>
                <p>@item.Tags</p>

            </div>
        </a>
    }
</div>



