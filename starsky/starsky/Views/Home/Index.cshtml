@using starsky.ViewModels
@model IEnumerable<ObjectItem>
@{
    ViewData["Title"] = "Home Page";
}

<div class="wrapper">
    @foreach (var item in Model)
    {

        <a class="halfitem" asp-controller="Home" asp-action="Index" asp-route-f="@item.FilePath">
            <div class="caption">
                <h3>@item.FileName</h3>
                <p>@item.Tags</p>

            </div>

            @if (!@item.IsFolder)
            {
                <img src="@Url.Action("Thumbnail", "Home", new {f = item.FileHash})" alt="" />
            }
            else
            {
                <img src="" alt="" />
            }
        </a>
 }
</div>



