@using Microsoft.AspNetCore.Mvc
@using starsky.ViewModels
@model SearchViewModel
@{
    ViewData["Title"] = Model.SearchQuery + " - Search";
    ViewData["SearchQuery"] = Model.SearchQuery;
}

<h2>
    @foreach (var item in Model.Breadcrumb)
    {
        var name = @item.Split("/")[item.Split("/").Length - 1];
        if (name == "")
        {
            name = "Home";
        }
        if (name != "Home")
        {
            <a asp-controller="Search" asp-action="Trash" asp-route-t="@item">@name</a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index">@name</a>
        }
        if (item != Model.Breadcrumb[Model.Breadcrumb.Count - 1])
        {
            <span> &raquo;</span>
        }
    }
</h2>


<h4>
    &nbsp;
    @if (Model.PageNumber >= 1)
    {
        var prevpage = @Model.PageNumber - 1;
        <a asp-controller="Search" asp-action="Trash" asp-route-t="@Model.SearchQuery" asp-route-p="@prevpage">Prev</a>
    }

    @if (Model.PageNumber < Model.LastPageNumber)
    {
        var nextpage = @Model.PageNumber + 1;
        <a class="next" asp-controller="Search" asp-action="Trash" asp-route-t="@Model.SearchQuery" asp-route-p="@nextpage">Next</a>
    }
</h4>

<div class="wrapper">

    @foreach (var item in Model.FileIndexItems)
    {
        <div class="halfitem">
            <div class="caption">
                <h3><a asp-controller="Home" asp-action="Index" asp-route-f="@item.FilePath">@item.FileName</a></h3>
                <p>@item.Tags <button onclick="Remove('@item.FilePath')"class="btn-sm btn btn-danger">Verwijder van schijf</button></p>
            </div>
            <img class="lazyload" src="#" data-src="@Url.Action("Thumbnail", "Api", new {f = item.FileHash})" alt="@item.Tags" />
        </div>
    }
</div>

<h4>
    &nbsp;
    @if (Model.PageNumber >= 1)
    {
        var prevpage = @Model.PageNumber - 1;
        <a asp-controller="Search" asp-action="Trash" asp-route-t="@Model.SearchQuery" asp-route-p="@prevpage">Prev</a>
    }

    @if (Model.PageNumber < Model.LastPageNumber)
    {
        var nextpage = @Model.PageNumber + 1;
        <a class="next" asp-controller="Search" asp-action="Trash" asp-route-t="@Model.SearchQuery" asp-route-p="@nextpage">Next</a>
    }
</h4>


<script type="text/javascript">
    function loadJSON(path, success, error, type) {
        var xhr = new XMLHttpRequest();
        xhr.onreadystatechange = function () {
            if (xhr.readyState === XMLHttpRequest.DONE) {
                if (xhr.status === 200 || xhr.status === 205) {
                    if (success) {
                        console.log(xhr.responseText);
                        success(JSON.parse(xhr.responseText));
                    };
                } else {
                    if (error)
                        error(xhr);
                }
            }
        };
        xhr.open(type, path, true);
        xhr.send();
    }

    function Remove(filePath) {
        var url = "@Url.Action("Delete", "Api")" + "?f=" + filePath;
        url = url.replace("&amp;", "&");
        loadJSON(url,
            function(data) {
                location.reload(); 
            },
            function (xhr) { console.error(xhr); },
            "DELETE"
        );
    }

    //loadJSON(url,
    //    function (data) { updateElement(data) },
    //    function (xhr) { console.error(xhr); },
    //    "POST"
    //);
</script>
