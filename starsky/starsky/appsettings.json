                }
            ],
            "2000px": [
                {
                    "ContentType":  "jpeg",
                    "SourceMaxWidth":  2000,
                    "OverlayMaxWidth":  0,
                    "Folder": "2000",
                    "Append": "_kl2k"
                }
            ]
        }
    }
